<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CustomBackgroundImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/background_image</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:layout_marginTop">42dp</item>
  </style>

  <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="boxBackgroundColor">#33C4C4C4</item>
    <item name="endIconMode">custom</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxCornerRadiusTopStart">12dp</item>
    <item name="boxCornerRadiusTopEnd">12dp</item>
    <item name="boxCornerRadiusBottomStart">12dp</item>
    <item name="boxCornerRadiusBottomEnd">12dp</item>
  </style>

  <style name="CustomTextInputEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="fontFamily">@font/montserrat_light</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000000</item>
    <item name="android:paddingStart">22dp</item>
  </style>

  <style name="CustomNextButton">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:text">@string/next</item>
    <item name="backgroundTint">#6C63FF</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:padding">12dp</item>
    <item name="android:fontFamily">@font/montserrat_semibold</item>
    <item name="android:textSize">20sp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:layout_marginBottom">23dp</item>
  </style>

  <style name="CustomNavigationText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#6C63FF</item>
    <item name="android:layout_marginStart">3dp</item>
  </style>

  <style name="CustomMemberQuestionText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#252525</item>
  </style>
</resources>